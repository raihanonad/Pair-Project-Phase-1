<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>List Product</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/admin">Product</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/admin/add"
                >Add Product</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <form action="/admin" method="get" class="text-center btn-group">
        <input type="submit" class="btn btn-light" value="All" />
        <input
          type="submit"
          class="btn btn-light"
          value="Barang A"
          name="sortCategory"
        />
        <input
          type="submit"
          class="btn btn-light"
          value="Barang B"
          name="sortCategory"
        />
        <input
          type="submit"
          class="btn btn-light"
          value="Barang C"
          name="sortCategory"
        />
        <input
          type="submit"
          class="btn btn-light"
          value="Barang D"
          name="sortCategory"
        />
        <input
          type="submit"
          class="btn btn-light"
          value="Barang E"
          name="sortCategory"
        />
      </form>

      <% if (nameProduct) { %>
      <h5><%= `Product ${nameProduct} has been successfully deleted` %></h5>
      <% } %>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Image</th>
            <th scope="col">Product Name</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Stock</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% product.forEach((el, index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><img src="<%= el.imageUrl %>" alt="product pict" /></td>
            <td><%= el.name %></td>
            <td><%= el.Category.name %></td>
            <td><%= el.description %></td>
            <td><%= el.stock %></td>
            <td><%= el.formatPrice %></td>
            <td>
              <div class="btn-group">
                <button type="button" class="btn btn-primary">
                  <a href="/admin/<%= el.id %>/increase-stock">+ Stock</a>
                </button>
                <button type="button" class="btn btn-success">
                  <a href="/admin/<%= el.id %>/decrease-stock">- Stock</a>
                </button>
                <button type="button" class="btn btn-danger">
                  <a href="/admin/<%= el.id %>/delete">Delete</a>
                </button>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
